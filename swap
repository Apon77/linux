#Edit these 3 lines according to your need
swap_file=/mnt/swapfile
swap_file_size=8G
swappiness=10        #swappiness 10 is good for server



#No need to touch below lines
sudo swapon --show
sudo fallocate -l $swap_file_size $swap_file
sudo chmod 600 $swap_file
sudo mkswap $swap_file
sudo swapon $swap_file
sudo nano /etc/fstab
