# Size of zram to be used
zram_size=1G    

# Turn on zram
sudo su
modprobe zram
echo lz4 > /sys/block/zram0/comp_algorithm
echo $zram_size > /sys/block/zram0/disksize
mkswap --label zram0 /dev/zram0
swapon --priority 100 /dev/zram0

# To disable it again, either reboot or run
sudo su
swapoff /dev/zram0
rmmod zram
